<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="content">
	
		<!-- tablet_cat_banner -->
			  <field name="tablet_cat_banner">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="source" xsi:type="string">category</item>
						<item name="label" xsi:type="string" translate="true">Category Banner Image (Tablet)</item>
						<item name="notice" xsi:type="string" translate="true">(Dimensions: 1024px * 267px)</item>
						<item name="visible" xsi:type="boolean">true</item>
						<item name="formElement" xsi:type="string">fileUploader</item>
						<item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
						<item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
						<item name="required" xsi:type="boolean">false</item>
						<item name="sortOrder" xsi:type="number">47</item>
						<item name="uploaderConfig" xsi:type="array">
							<item name="url" xsi:type="url" path="dcs_megamenuimg/category_thumbnail/upload"/>
							
						</item>
					</item>
				</argument>
			</field>
		<!-- tablet_cat_banner -->
	
		<!-- mobile_cat_banner -->
			  <field name="mobile_cat_banner">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="source" xsi:type="string">category</item>
						<item name="label" xsi:type="string" translate="true">Category Banner Image (Mobile)</item>
						<item name="notice" xsi:type="string" translate="true">(Dimensions: 767px * 288px)</item>
						<item name="visible" xsi:type="boolean">true</item>
						<item name="formElement" xsi:type="string">fileUploader</item>
						<item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
						<item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
						<item name="required" xsi:type="boolean">false</item>
						<item name="sortOrder" xsi:type="number">48</item>
						<item name="uploaderConfig" xsi:type="array">
							<item name="url" xsi:type="url" path="dcs_megamenuimg/category_thumbnail/upload"/>
							
						</item>
					</item>
				</argument>
			</field>
		<!-- End mobile_cat_banner -->
		
		
	
	
		
		<!-- Menu Thumbnail -->
			  <field name="menu_thumbnail">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="source" xsi:type="string">category</item>
						<item name="label" xsi:type="string" translate="true">Mega Menu Thumbnail</item>
						<item name="notice" xsi:type="string" translate="true">(Dimensions: 81px * 60px)</item>
						<item name="visible" xsi:type="boolean">true</item>
						<item name="formElement" xsi:type="string">fileUploader</item>
						<item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
						<item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
						<item name="required" xsi:type="boolean">false</item>
						<item name="sortOrder" xsi:type="number">50</item>
						<item name="uploaderConfig" xsi:type="array">
							<item name="url" xsi:type="url" path="dcs_megamenuimg/category_thumbnail/upload"/>
							
						</item>
					</item>
				</argument>
			</field>
		<!-- End Menu Thumbnail -->
		
		<!-- Menu First Image -->
			<field name="menu_first_img">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="source" xsi:type="string">category</item>
						<item name="label" xsi:type="string" translate="true">Category Thumbnail</item>
						<item name="notice" xsi:type="string" translate="true">(Dimensions: 270px * 355px)</item>
						<item name="visible" xsi:type="boolean">true</item>
						<item name="formElement" xsi:type="string">fileUploader</item>
						<item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
						<item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
						<item name="required" xsi:type="boolean">false</item>
						<item name="sortOrder" xsi:type="number">51</item>
						<item name="uploaderConfig" xsi:type="array">
							<item name="url" xsi:type="url" path="dcs_megamenuimg/category_thumbnail/upload"/>
							
						</item>
					</item>
				</argument>
			</field>
		<!-- End Menu First Image -->
		
		<!-- Show on Home Page -->
		
		
		<field name="show_on_homepage">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">51</item>
					<item name="dataType" xsi:type="string">boolean</item>
					<item name="formElement" xsi:type="string">checkbox</item>
					<item name="source" xsi:type="string">category</item>
					<item name="prefer" xsi:type="string">toggle</item>
					<item name="label" xsi:type="string" translate="true">Show on Home Page</item>
					<item name="valueMap" xsi:type="array">
						<item name="true" xsi:type="string">1</item>
						<item name="false" xsi:type="string">0</item>
					</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
					<item name="default" xsi:type="string">0</item>
				</item>
			</argument>
	</field>
		
	<!-- Show on Home Page -->	
		
		
    </fieldset>
</form>